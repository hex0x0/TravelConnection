    <div class="container d-flex justify-content-between">
      <div class="row">
        {{#each posts}}
        <div class="col-4">
            <div class="card">
            <div class="card-title text-center">
              <h4 class="lead">{{this.nome}}</h4>
              <small>{{this.descricao}}</small>
              <img src="../images/{{this.file}}" width="300" height="196">
            </div>
            <div class="card-body justify-text">
              <p>{{this.conteudo}}</p>
            </div>
            <div class="card-footer">
              <small>Categoria: {{this.CategoriumId}}</small>
              <br>
              <small>Data: {{this.data}}</small>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
  
