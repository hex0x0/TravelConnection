<header id="nav-main" class="py-2 bg-danger text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <i class="fas fa-users"></i> Usuários
                    </h1>
                </div>
            </div>
        </div>
    </header>

    <section id="buscar" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 ml-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Usuários...">
                        <div class="input-group-append">
                            <button class="m-1 btn btn-primary">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   

    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h4>Últimos usuários</h4>
                        </div>


                        <table class="table table-striped">
                            <thead clas="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                {{#each usuarios}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.nome}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <a href="/admin/dashboard/usuarios/edit/{{this.id}}" class="btn btn-secondary">
                                            editar
                                        </a>
                                    </td>

                                    <td>
                                        <a href="details.html" class="btn btn-secondary">
                                            deletar
                                        </a>
                                    </td>

                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>

