<h3>Editando</h3>

ID: {{usuario.id}}
<br>
NOME: {{usuario.nome}}

<div class="card-body">
    <form action="/admin/edit" method="POST">
        <input type="hidden" name="id" value={{usuario.id}}>
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" value="{{usuario.nome}}">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" value="{{usuario.email}}">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" value="{{usuario.password}}">
        </div>

        <input type="submit" class="btn btn-primary btn-block mt-2" value="editar">

    </form>
</div>