</header>

 <section id="buscar" class="py-4 mb-4 bg-light">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 ml-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Postagens...">
                        <div class="input-group-append">
                            <button class="m-1 btn btn-primary">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <h4>Últimos posts</h4>
                    </div>
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Título</th>
                                <th>Descrição</th>
                                <th>Data</th>
                                <th></th>
                            </tr>
                            <tbody>
                                {{#each posts}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.nome}}</td>
                                    <td>{{this.descricao}}</td>
                                    <td>{{this.data}}</td>

                                    <td>
                                        <a href="/admin/dashboard/posts/edit/{{this.id}}" class="btn btn-secondary">
                                            editar
                                        </a>
                                    </td>
                                    <td>
                                       <form action="/admin/dashboard/posts/remove" method="POST">
                                            <input type="hidden" name="id" value={{this.id}}>
                                            <button type="submit">
                                                excluir
                                            </button>
                                       </form>

                                    </td>

                                </tr>
